

<table class="table table-striped table-bordered">
  <tr>
    <th>Users</th>
    <th>First Name</th>
    <th colspan="2"></th>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= link_to 'Show Detail', user_path(user), {:class => 'btn btn-info', :role => 'button'} %></td>
      </tr>

  <% end %>
</table>

<%=
  if current_user then
    link_to('Back to Profile', current_user, {:class => 'btn btn-info', :role => 'button'})
  end
%>
<%= link_to 'Home', home_index_path, {:class => 'btn btn-info', :role => 'button'} %>


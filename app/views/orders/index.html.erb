<h1>Listing Orders</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="2"></th>
  </tr>

  <% @orders.each do |order| %>
    <tr>
      <td><%= order.title %></td>
      <td><%= order.text %></td>
      <td><%= link_to 'Show', order_path(order) %></td>
<!--      <td><%= link_to 'Edit', edit_order_path(order) %></td> -->
      <td>
        <%= button_to "Pick", {action: "pick", id: order}, :method => :put%>
      </td>
    </tr>

  <% end %>
</table>
<%= link_to 'Back', home_index_path %>
<p>
  <strong>Title:</strong>
  <%= @order.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @order.text %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @order.user_id %>
</p>

<p>
  <strong>Points:</strong>
  <%= @order.points %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @order.user.username%>
</p>

<p>
  <strong>Deliverer:</strong>
  <% if @order.deliverer_id? %>
    <%= User.find(@order.deliverer_id).username %>
  <% else %>
    None
  <% end %>
</p>

<%= link_to 'Edit', edit_order_path(@order), {:class => 'btn btn-info', :role => 'button'} %>
<%= link_to 'Back', orders_path, {:class => 'btn btn-info', :role => 'button'} %>

<h1>My History</h1>

<h3> My Completed Orders</h3>
<table class="table table-striped table-bordered">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Points</th>
    <th>Deliverer</th>
    <th>Delivered time</th>
    <th colspan="2"></th>
  </tr>

  <% @my_orders.each do |order| %>
      <tr>
        <td><%= order.title %></td>
        <td><%= order.text %></td>
        <td><%= order.points %></td>
        <td><%= User.find(order.deliverer_id) %></td>
        <td><%= order.delivered_at %></td>
        <td><%= link_to 'Show', order_path(order), {:class => 'btn btn-info', :role => 'button'} %></td>
      </tr>
  <% end %>
</table>

<h3> My Completed Picks</h3>
<table class="table table-striped table-bordered">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Points</th>
    <th>Owner</th>
    <th>Delivered time</th>
    <th colspan="2"></th>
  </tr>

  <% @my_picks.each do |order| %>
      <tr>
        <td><%= order.title %></td>
        <td><%= order.text %></td>
        <td><%= order.points %></td>
        <td><%= order.user.username %></td>
        <td><%= order.delivered_at %></td>
        <td><%= link_to 'Show', order_path(order), {:class => 'btn btn-info', :role => 'button'} %></td>
      </tr>
  <% end %>
</table>

